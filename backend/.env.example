# ===========================================
# Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# ===========================================
# Server Configuration
# ===========================================
NODE_ENV=development
PORT=5001
API_VERSION=v1

# ===========================================
# Database Connection
# ===========================================
# LỰA CHỌN 1: Dùng SQLite (Khuyên dùng để chạy ngay, không cần cài đặt thêm)
DATABASE_URL="file:./dev.db"

# LỰA CHỌN 2: Dùng PostgreSQL (Nếu máy bạn đã cài Postgres)
# DATABASE_URL="postgresql://postgres:password@localhost:5432/web_scraper?schema=public"

# ===========================================
# JWT Authentication (Bảo mật)
# ===========================================
JWT_ACCESS_SECRET=your-super-secret-access-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-access-key-change-in-production
JWT_ACCESS_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# CORS (Kết nối Frontend)
# ===========================================
# Cổng 5173 là cổng mặc định của Vite (Frontend của bạn)
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# ===========================================
# Python Scraper Service (Microservice)
# ===========================================
# Nếu bạn chạy Python scraper riêng ở port 8000
SCRAPER_SERVICE_URL=http://localhost:8000
SCRAPER_SERVICE_API_KEY=dev-internal-key

# ===========================================
# Scraper Configuration (Cấu hình cào)
# ===========================================
SCRAPER_HEADLESS=true
SCRAPER_MAX_COMMENTS=1000
SCRAPER_SCROLL_TIMEOUT=5000

# ===========================================
# Security & Rate Limit (Mặc định)
# ===========================================
BCRYPT_SALT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# Email & Queue (Để trống hoặc điền sau)
# ===========================================
RESEND_API_KEY=
MAIL_FROM="Crawl Comments <noreply@localhost>"
QUEUE_CONCURRENCY=2
