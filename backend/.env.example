# ===========================================
# Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# ===========================================
# Server Configuration
# ===========================================
NODE_ENV=development
PORT=5000
API_VERSION=v1

# ===========================================
# Database (PostgreSQL)
# ===========================================
DATABASE_URL="postgresql://username:password@localhost:5432/web_scraper?schema=public"

# ===========================================
# JWT Configuration
# ===========================================
JWT_ACCESS_SECRET=your-super-secret-access-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# CORS Configuration
# ===========================================
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# ===========================================
# Python Scraper Microservice
# ===========================================
SCRAPER_SERVICE_URL=http://localhost:8000
SCRAPER_SERVICE_API_KEY=your-internal-api-key

# ===========================================
# Email Configuration (Resend)
# ===========================================
RESEND_API_KEY=re_xxxxxxxxxxxxx
MAIL_FROM="Crawl Comments <noreply@yourdomain.com>"

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# Security
# ===========================================
BCRYPT_SALT_ROUNDS=12
PASSWORD_CHANGE_COOLDOWN_DAYS=7

# ===========================================
# Queue Configuration
# ===========================================
QUEUE_CONCURRENCY=2
QUEUE_MAX_RETRIES=3
QUEUE_JOB_TIMEOUT=300000

# ===========================================
# Scraper Configuration
# ===========================================
SCRAPER_HEADLESS=true
SCRAPER_MAX_COMMENTS=1000
SCRAPER_SCROLL_TIMEOUT=5000
